{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "standard-with-typescript"
  ],
  "ignorePatterns": [
    "dist",
    "*.json"
  ],
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "func-style": [
      2,
      "declaration"
    ],
    "indent": "off",
    "@typescript-eslint/indent": [
      "error",
      2,
      {
        "offsetTernaryExpressions": true,
        "SwitchCase": 1
      }
    ],
    "import/no-default-export": "error",
    "no-else-return": "error"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.test.ts",
        "**/*.e2e.ts",
        "**/*.spec.ts"
      ],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": "off",
        "no-lone-blocks": "off"
      }
    }
  ]
}
