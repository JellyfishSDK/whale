{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@defichain/whale-api-client": ["packages/whale-api-client/src/"],
      "@defichain/whale-api-wallet": ["packages/whale-api-wallet/src/"]
    }
  }
}
